<div class="bg-light shadow-lg p-4 mb-5 rounded">

  <p>
    <strong>Title:</strong>
    <%= @kudo.title %>
  </p>
  <hr class="my-4">

  <p>
    <strong>Content:</strong>
    <%= @kudo.content %>
  </p>
  <hr class="my-4">

  <p>
    <strong>Giver:</strong>
    <%= @kudo.giver_of_kudo.email %>
  </p>
  <hr class="my-4">

  <p>
    <strong>Receiver:</strong>
    <%= @kudo.receiver_of_kudo.email %>
  </p>
  <hr class="my-4">

  <div class="d-grid gap-1 d-md-flex mx-left">
    <% if @kudo.giver_of_kudo == current_employee %>
      <%= link_to 'Edit This Kudo...', edit_kudo_path(@kudo), class:"btn btn-warning" %>
      <%= link_to 'Destroy This Kudo!', @kudo, method: :delete, :onclick => "return confirm('Are you sure you want to delete this Kudo?')", class:"btn btn-danger" %>
    <% end %>
    <%= link_to 'Back To Kudos List', kudos_path, class:"btn btn-secondary" %>
  </div>
</div>
