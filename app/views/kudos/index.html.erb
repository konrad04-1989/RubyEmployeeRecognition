<div class="bg-light shadow-lg p-4 mb-5 rounded">
<p id="notice"><%= notice %></p>

<h2>Kudos List</h2>

<table class="table table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Giver</th>
      <th>Receiver</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @kudos.each do |kudo| %>
      <tr>
        <td><%= kudo.title %></td>
        <td><%= kudo.content %></td>
        <td><%= kudo.giver_id %></td>
        <td><%= kudo.receiver_id %></td>
        <td>
          <%= link_to 'Show', kudo, class:"btn btn-primary" %>
          <%= link_to 'Edit', edit_kudo_path(kudo), class:"btn btn-warning" %>
          <%= link_to 'Destroy', kudo, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
        </td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Kudo!', new_kudo_path, class:"btn btn-success" %>
</div>
