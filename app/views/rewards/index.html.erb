<div class="bg-light shadow-lg p-4 mb-5 rounded">

<h2>Rewards List</h2>

<table class="table table-sm table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th style="width: 10%">Price</th>
      <th style="width: 10%", colspan="2">Details</th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.title %></td>
        <td><%= reward.price %></td>
        <td><%= link_to 'Show', reward, class:"btn btn-primary btn-sm" %></td>
        <% if current_employee.number_of_points >= reward.price %>
          <td><%= button_to 'Buy', orders_path(reward_id: reward), data: { confirm: 'Are you sure?' }, class:"btn btn-success btn-sm" %></td>
        <% else %>
          <td><%= button_to 'Buy', orders_path(reward_id: reward), disabled: true, class:"btn btn-secondary btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
