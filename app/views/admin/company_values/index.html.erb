<div class="bg-light shadow-lg p-4 mb-5 rounded table-responsive">

<h2>Company Values List</h2>

<table class="table table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th style="width: 1%", colspan="3">Modify</th>
    </tr>
  </thead>

  <tbody>
    <% @company_values.each do |company_value| %>
      <tr>
        <td><%= company_value.title %></td>
        <td><%= link_to 'Show', admin_company_value_path(company_value), class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit...', edit_admin_company_value_path(company_value), class:"btn btn-warning" %></td>
        <td><%= button_to 'Destroy!', admin_company_value_path(company_value), method: :delete, :onclick => "return confirm('Are you sure you want to delete this Company Value?')", class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
  <%= link_to 'Create New Company Value!', new_admin_company_value_path, class: 'btn btn-outline-success me-md-5' %>
<br>
</div>
