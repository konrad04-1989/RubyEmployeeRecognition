<%= form_for [:admin, @company_value ] do |f| %>
  <% if @company_value.errors.any? %>
    <div class="container mt-1">
      <div class="mt-1 p-3 bg-warning text-black rounded">
        <div id="error_explanation">
          <h2><%= pluralize(@company_value.errors.count, "error") %> prohibited this Company Value from being saved:</h2>
          <ul>
            <% @company_value.errors.each do |error| %>
