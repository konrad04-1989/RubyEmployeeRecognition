<div class="bg-light shadow-lg p-4 mb-5 rounded">
    <h2>Editing Company Value</h2>

    <%= render 'form', company_value: @company_value %>
    <hr class="my-4">

    <div class="d-grid gap-1 d-md-flex mx-left">
        <%= link_to 'Show This Company Value', admin_company_value_path(@company_value), class:"btn btn-primary" %>
        <%= button_to 'Destroy This Company Value!', admin_company_value_path(@company_value), method: :delete, :onclick => "return confirm('Are you sure you want to delete this Company Value?')", class:"btn btn-danger" %>
        <%= link_to 'Back To Company Values List', admin_company_values_path, class:"btn btn-secondary" %>
    </div>
</div>
