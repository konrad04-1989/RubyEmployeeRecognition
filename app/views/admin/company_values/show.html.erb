<div class="bg-light shadow-lg p-4 mb-5 rounded">

  <p>
    <strong>Title:</strong>
    <%= @company_value.title %>
  </p>
  <hr class="my-4">

  <div class="d-grid gap-1 d-md-flex mx-left">
    <%= link_to 'Edit This Company Value', edit_admin_company_value_path(@company_value), class:"btn btn-warning" %>
    <%= button_to 'Destroy This Company Value!', admin_company_value_path(@company_value), method: :delete, :onclick => "return confirm('Are you sure you want to delete this Kudo?')", class:"btn btn-danger" %>
    <%= link_to 'Back To Company Values List', admin_company_values_path, class:"btn btn-secondary" %>
  </div>
</div>
