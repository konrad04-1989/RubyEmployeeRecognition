<div class="bg-light shadow-lg p-4 mb-5 rounded table-responsive">

<h2>Rewards List</h2>

<table class="table table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th style="width: 1%">Price</th>
      <th style="width: 1%", colspan="3">Modify</th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.title %></td>
        <td><%= reward.description %></td>
        <td><%= reward.price %></td>
        <td><%= link_to 'Show', admin_reward_path(reward), class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit...', edit_admin_reward_path(reward), class:"btn btn-warning" %></td>
        <td><%= button_to 'Destroy!', admin_reward_path(reward), method: :delete, :onclick => "return confirm('Are you sure you want to delete this Reward?')", class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
  <%= link_to 'Create New Reward!', new_admin_reward_path, class: 'btn btn-outline-success me-md-5' %>
<br>
</div>
