<div class="bg-light shadow-lg p-4 mb-5 rounded">

  <p>
    <strong>Title:</strong>
    <%= @kudo.title %>
  </p>
  <hr class="my-4">

  <p>
    <strong>Content:</strong>
    <%= @kudo.content %>
  </p>
  <hr class="my-4">

  <p>
    <strong>Company Value:</strong>
    <%= @kudo.company_value.title %>
  </p>
  <hr class="my-4">

  <p>
    <strong>Giver:</strong>
    <%= @kudo.giver_of_kudo.email %>
  </p>
  <hr class="my-4">

  <p>
    <strong>Receiver:</strong>
    <%= @kudo.receiver_of_kudo.email %>
  </p>
  <hr class="my-4">

  <div class="d-grid gap-1 d-md-flex mx-left">
    <%= button_to 'Destroy This Kudo!', admin_kudo_path(@kudo), method: :delete, :onclick => "return confirm('Are you sure you want to delete this Kudo?')", class:"btn btn-danger" %>
    <%= link_to 'Back To Kudos List', admin_kudos_path, class:"btn btn-secondary" %>
  </div>
</div>
