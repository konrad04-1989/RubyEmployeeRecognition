<div class="bg-light shadow-lg p-4 mb-5 rounded">

<h2>Kudos List</h2>

<table class="table table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Giver</th>
      <th>Receiver</th>
      <th colspan="2">Modify</th>
    </tr>
  </thead>

  <tbody>
    <% @kudos.each do |kudo| %>
      <tr>
        <td><%= kudo.title %></td>
        <td><%= kudo.content %></td>
        <td><%= kudo.giver_of_kudo.email %></td>
        <td><%= kudo.receiver_of_kudo.email %></td>
        <td><%= link_to 'Show', admin_kudo_path(kudo), class:"btn btn-primary" %></td>
        <td><%= button_to 'Destroy!', admin_kudo_path(kudo), method: :delete, :onclick => "return confirm('Are you sure you want to delete this Kudo?')", class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
