<div class="bg-light shadow-lg p-4 mb-5 rounded">

<h2>Employees List</h2>

<table class="table table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Email</th>
      <th>Number of available Kudos</th>
      <th colspan="3">Modify</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.email %></td>
        <td><%= employee.number_of_available_kudos %></td>
        <td><%= link_to 'Show', admin_employee_path(employee), class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit...', edit_admin_employee_path(employee), class:"btn btn-warning" %></td>
        <td><%= button_to 'Destroy!', admin_employee_path(employee), method: :delete, :onclick => "return confirm('Are you sure you want to delete this Emp?')", class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>
